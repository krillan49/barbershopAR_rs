<div class="container">

<h2 class="text-center">Записаться</h2>
<p class="text-center">На этой странице вы сможете записаться к нам в Barber Shop</p>
<h2 class="text-center text-success"><%= @message %></h2>


<form action="/visit" method="POST">
	<%= '<fieldset disabled>' if @message %> <!-- Деактивирует заполненную форму если все заполнено -->

	<div class="mb-3">	
		<label for="u_name" class="form-label">Ваше имя</label>
		<input class="form-control <%= 'is-invalid' if @c.name == '' %>" type="text" name="client[name]" value="<%= @c.name %>" id="u_name" aria-describedby="u_name_error">
		<% if @c.name == '' %>
			<div id="u_name_error" class="form-text" style="color: red">Введите имя</div>
		<% end %>
	</div>

	<div class="mb-3">
		<label for="u_phone" class="form-label">Ваш телефон</label>
		<input class="form-control <%= 'is-invalid' if @c.phone == '' %>" type="text" name="client[phone]" value="<%= @c.phone %>" id="u_phone" aria-describedby="u_phone_error">
		<% if @c.phone == '' %>
			<div id="u_phone_error" class="form-text" style="color: red">Введите телефон</div>
		<% end %>
	</div>

	<div class="mb-3">
		<label for="u_dat" class="form-label">Когда вас ждать?</label>
		<input class="form-control <%= 'is-invalid' if @c.datestamp == '' %>" name="client[datestamp]" value="<%= @c.datestamp %>" type="datetime-local" id="u_dat" aria-describedby="u_dat_error">
		<% if @c.datestamp == '' %>
			<div id="u_dat_error" class="form-text" style="color: red">Введите время для записи</div>
		<% end %>
	</div>

	<div class="mb-3">
		<label for="u_barb" class="form-label">Ваш парикмахер:</label>
		<select name="client[barber]" class="form-select form-select-lg" id="u_barb">
			<% @barbers.each do |row| %>
				<option <%= 'selected' if @c.barber == row.name %>><%=row.name%></option>
			<% end %>
		</select>
	</div>

	<div class="mb-3">
		<label for="u_color" class="form-label">Выберите цвет</label>
		<input name="client[color]" value="<%=@c.color%>" type="color" class="form-control form-control-color" id="u_color">
	</div>

	<input type="submit" class="btn btn-lg btn-secondary" value="Записаться">

	<%= '</fieldset>' if @message %>
</form>

</div>