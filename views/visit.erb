<div class="container">

<h2 class="text-center">Записаться</h2>
<p class="text-center">На этой странице вы сможете записаться к нам в Barber Shop</p>
<h2 class="text-center text-success"><%= @message %></h2>


<form action="/visit" method="POST">
	<%= '<fieldset disabled>' if @message %> <!-- Деактивирует заполненную форму если все заполнено -->

	<div class="mb-3">	
		<label for="u_name" class="form-label">Ваше имя</label>
		<!--<input class="form-control <%= 'is-invalid' if nil %>" type="text" name="client[name]" value="<%= @c.name %>" id="u_name" aria-describedby="u_name_error">
		<% if @visit_error %>
			<div id="u_name_error" class="form-text" style="color: red"><%= @visit_error[:user_name] %></div>
		<% end %>-->
    <input class="form-control" type="text" name="client[name]" value="<%= @c.name %>" id="u_name" aria-describedby="u_name_error">
	</div>

	<div class="mb-3">
		<label for="u_phone" class="form-label">Ваш телефон</label>
		<!--<input class="form-control <%= 'is-invalid' if @visit_error && @visit_error[:phone] %>" type="text" name="client[phone]" value="<%= @c.phone %>" id="u_phone" aria-describedby="u_phone_error">
		<% if @visit_error %>
			<div id="u_phone_error" class="form-text" style="color: red"><%= @visit_error[:phone] %></div>
		<% end %>-->
    <input class="form-control" type="text" name="client[phone]" value="<%= @c.phone %>" id="u_phone" aria-describedby="u_phone_error">
	</div>

	<div class="mb-3">
		<label for="u_dat" class="form-label">Когда вас ждать?</label>
		<!--<input class="form-control <%= 'is-invalid' if @visit_error && @visit_error[:date_time] %>" name="client[datestamp]" value="<%= @c.datestamp %>" type="datetime-local" id="u_dat" aria-describedby="u_dat_error">
		<% if @visit_error %>
			<div id="u_dat_error" class="form-text" style="color: red"><%= @visit_error[:date_time] %></div>
		<% end %>-->
    <input class="form-control" name="client[datestamp]" value="<%= @c.datestamp %>" type="datetime-local" id="u_dat" aria-describedby="u_dat_error">
	</div>

	<div class="mb-3">
		<label for="u_barb" class="form-label">Ваш парикмахер:</label>
		<select name="client[barber]" class="form-select form-select-lg" id="u_barb">
			<% @barbers.each do |row| %>
				<option <%= 'selected' if @c.barber == row.name %>><%=row.name%></option>
			<% end %>
		</select>
	</div>

	<div class="mb-3">
		<label for="u_color" class="form-label">Выберите цвет</label>
		<input name="client[color]" value="<%=@c.color%>" type="color" class="form-control form-control-color" id="u_color">
	</div>

	<input type="submit" class="btn btn-lg btn-primary" value="Записаться">

	<%= '</fieldset>' if @message %>
</form>

</div>